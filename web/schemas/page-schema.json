{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Page Specification",
  "type": "object",
  "properties": {
    "page_id": {
      "type": "string",
      "description": "Filename without extension"
    },
    "layout": {
      "type": "string", 
      "enum": ["base", "docs", "home"],
      "description": "Template layout to use"
    },
    "active_nav": {
      "type": "string",
      "enum": ["home", "components", "protocols", "sovereign-ai", "documentation"],
      "description": "Which navigation item should be highlighted"
    },
    "meta": {
      "type": "object",
      "properties": {
        "title": {"type": "string", "maxLength": 60},
        "description": {"type": "string", "maxLength": 160},
        "keywords": {"type": "string"}
      },
      "required": ["title", "description"]
    },
    "content_blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["hero", "section", "grid", "code", "card", "warning"]
          },
          "title": {"type": "string"},
          "content": {"type": "string"},
          "classes": {"type": "string"},
          "data": {"type": "object"}
        },
        "required": ["type", "content"]
      }
    }
  },
  "required": ["page_id", "layout", "active_nav", "meta"]
}