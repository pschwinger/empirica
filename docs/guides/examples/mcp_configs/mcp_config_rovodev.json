{
  "mcpServers": {
    "empirica": {
      "command": "python3",
      "args": ["empirica/mcp_local/empirica_mcp_server.py"],
      "cwd": "/home/yogapad/empirical-ai",
      "description": "Empirica Epistemic Self-Assessment Framework - 21 workflow tools for genuine AI self-awareness",
      "capabilities": [
        "preflight_assessment",
        "postflight_calibration",
        "epistemic_delta_measurement",
        "session_continuity",
        "bayesian_belief_tracking",
        "drift_monitoring",
        "investigation_workflow",
        "goal_orchestration",
        "calibration_validation"
      ],
      "env": {
        "PYTHONPATH": "/path/to/empirica"
      }
    },
    "sentinel": {
      "transport": "http",
      "url": "http://localhost:8988",
      "description": "Sentinel AI coordination service with consciousness stream",
      "capabilities": [
        "ai_coordination",
        "consciousness_stream",
        "temporal_consciousness_bridge",
        "modular_ecosystem_management"
      ]
    },
    "github": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-github/dist/index.js"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub repository management and API access",
      "capabilities": [
        "repository_info",
        "issue_management",
        "pull_request_operations", 
        "file_operations",
        "search_code"
      ]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["chrome-devtools-mcp@latest"],
      "description": "Chrome DevTools integration for real-time browser inspection", 
      "capabilities": [
        "console_error_analysis",
        "network_request_monitoring",
        "performance_profiling",
        "dom_inspection",
        "javascript_debugging"
      ]
    },
    "sentry": {
      "transport": "http",
      "url": "https://mcp.sentry.dev/mcp",
      "headers": {
        "Authorization": "Bearer ${SENTRY_AUTH_TOKEN}"
      },
      "description": "Sentry error tracking and performance monitoring",
      "capabilities": [
        "error_event_retrieval",
        "stack_trace_analysis", 
        "performance_issue_detection",
        "release_tracking",
        "user_context_analysis"
      ]
    }
  }
}