---
interface Props {
  title: string;
  description: string;
  isHomepage?: boolean;
  pageTitle?: string;
  pageDescription?: string;
  breadcrumbs?: string[];
}

const {
  title = "Empirica SDK",
  description = "The meta-framework for AI self-awareness through epistemic humility.",
  isHomepage = false,
  pageTitle,
  pageDescription,
  breadcrumbs = []
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | AI Self-Awareness</title>
    <meta name="description" content={description}>

    <!-- Tailwind CSS -->
    <script is:inline src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio"></script>

    <!-- Google Fonts -->
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
        rel="stylesheet">
    
    <style is:inline>
        :root {
            --color-primary: #6366f1;
            --color-primary-dark: #4338ca;
            --color-secondary: #0ea5e9;
            --color-bg-dark: #0f172a;
            --color-bg-card: rgba(30, 41, 59, 0.7);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--color-bg-dark);
        }

        .glow-effect {
            position: relative;
            overflow: hidden;
        }

        .glow-effect::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 50%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
            transform: skewX(-25deg);
            transition: 0.5s;
            pointer-events: none;
        }

        .glow-effect:hover::before {
            left: 100%;
            transition: 0.7s;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 0.5rem 1rem;
            color: #94a3b8 !important;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
            text-decoration: none;
            font-weight: 500;
        }

        .nav-link:hover {
            color: #f8fafc !important;
            background-color: rgba(255, 255, 255, 0.05);
        }

        .nav-active {
            color: var(--color-primary) !important;
            background-color: rgba(99, 102, 241, 0.1);
        }

        pre {
            background: #000000;
            border: 1px solid rgba(99, 102, 241, 0.3);
            border-radius: 0.5rem;
            padding: 1.5rem;
            overflow-x: auto;
            margin: 1.5rem 0;
            color: #ffffff;
        }

        code {
            font-family: 'JetBrains Mono', 'Fira Code', monospace;
            font-size: 0.875em;
        }

        .bento-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .glass-panel {
            background: rgba(30, 41, 59, 0.5);
            border: 1px solid rgba(148, 163, 184, 0.1);
            backdrop-filter: blur(12px);
        }

        .glass-card {
            background: rgba(30, 41, 59, 0.4);
            border: 1px solid rgba(148, 163, 184, 0.1);
            backdrop-filter: blur(8px);
        }
    </style>
</head>

<body class="bg-slate-900 text-slate-200 antialiased selection:bg-indigo-500 selection:text-white">

    <slot name="header" />
    <slot name="navigation" />

    <!-- Breadcrumbs -->
    {breadcrumbs.length > 0 && (
    <div class="border-b border-slate-800 bg-slate-900/50 backdrop-blur-sm sticky top-[73px] z-40">
        <div class="max-w-6xl mx-auto px-6 py-3">
            <nav class="flex items-center space-x-2 text-sm">
                <a href="/" class="text-slate-400 hover:text-indigo-400 transition-colors">Home</a>
                {breadcrumbs.map(crumb => (
                    <>
                        <span class="text-slate-600">â€º</span>
                        <span class="text-slate-200 font-medium">{crumb}</span>
                    </>
                ))}
            </nav>
        </div>
    </div>
    )}

    <!-- Page Header (Non-Homepage) -->
    {!isHomepage && pageTitle && (
    <div class="relative overflow-hidden pt-24 pb-16">
        <div class="max-w-4xl mx-auto px-6 relative z-10 text-center">
            <div
                class="inline-flex items-center rounded-full border border-indigo-500/30 bg-indigo-500/10 px-3 py-1 text-sm font-medium text-indigo-300 backdrop-blur-sm mb-6">
                <span class="flex h-2 w-2 rounded-full bg-indigo-500 mr-2 animate-pulse"></span>
                Epistemic Self-Awareness for AI
            </div>

            <h1 class="text-5xl md:text-6xl font-bold tracking-tight mb-6 text-white">
                {pageTitle}
            </h1>

            {pageDescription && (
            <p class="text-xl text-slate-300 max-w-2xl mx-auto leading-relaxed">
                <span class="font-semibold text-white">{pageDescription}</span>
            </p>
            )}
        </div>

        <!-- Background Glow -->
        <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
            <div class="absolute top-20 left-1/4 w-96 h-96 bg-indigo-500/10 rounded-full blur-3xl"></div>
            <div class="absolute top-40 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl"></div>
        </div>
    </div>
    )}

    <main class="min-h-screen">
        <slot />
    </main>

    <slot name="footer" />

    <script>
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu?.classList.toggle('hidden');
        }
        (window as any).toggleMobileMenu = toggleMobileMenu;
    </script>
</body>
</html>
